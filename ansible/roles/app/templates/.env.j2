# Environment: {{ environment }}
# Generated by Ansible - DO NOT EDIT MANUALLY

# Application
APP_ENV={{ environment }}
APP_DEBUG={{ 'true' if environment == 'stage' else 'false' }}
APP_KEY={{ app_key_secret.stdout }}
APP_URL=https://{{ domain }}

# Database
DB_CONNECTION=mysql
DB_HOST=mysql
DB_PORT=3306
DB_DATABASE=blindstrader
DB_USERNAME=root
DB_PASSWORD={{ db_password_secret.stdout }}

# Redis
REDIS_HOST=redis
REDIS_PASSWORD={{ redis_password_secret.stdout | default('') }}
REDIS_PORT=6379

# Cache & Queue
CACHE_DRIVER=redis
QUEUE_CONNECTION=redis
SESSION_DRIVER=redis

# Monitoring
GRAFANA_ADMIN_PASSWORD={{ grafana_password_secret.stdout }}

# Optional: Sentry (if configured)
{% if sentry_dsn is defined and sentry_dsn != '' %}
SENTRY_LARAVEL_DSN={{ sentry_dsn }}
{% endif %}
